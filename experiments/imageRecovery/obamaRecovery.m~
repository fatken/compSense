addpath('../../3/');

img = imread("PBO-SeriousFace.jpg");
gray = rgb2gray(img);

% block 50% of image

[nRow, nCol] = size(gray);

y = gray;
y(nRow/2:nRow, :) = 0;
transposedY = transpose(y);
% flattenedY shape: N * 1
flattenedY = transposedY(:);
% check tanslation correct:
% transpose(flattenedY(1:100)) == gray(1, 1:100)
yNonZero = flattenedY ~= 0;
yHat = flattenedY(yNonZero);
[m, ~] = size(yHat);
N = nRow * nCol;


A = generateFreqDomainSensingMatrix(m, N);
y = Ax
x = A-